<div class="container">

  <img style='width: 200px; padding-bottom: 30px' src="data:image/png;base64," alt="">

  <div class='pickup-info'>
    <h3>💸 Remaining budget :</h3>
    <h3 class='remaining-buget'>100</h3>
    <h3 style='padding-left: 0px'>M$</h3>
  </div>
  <h5 class='error-message error-budget'></h5>

  <div class="pickup-info">
    <h3>🧢 Drivers to pick :</h3>
    <h3 class='remaining-players'>5</h3>
  </div>
  <h5 class='error-message error-players'></h5>

  <div class="pickup-info">
    <h3>🏎 Constructor to pick :</h3>
    <h3 class='remaining-constructor'>1</h3>
  </div>
  <h5 class='error-message error-constructors'></h5>

  <p class='save-team-button'>Testing</p>

  <h1>Pilots</h1>
  <table class='pilot-table'>
    <% @players.each do |player| %>
      <% if (player.is_constructor == false) %>
        <tr class="clickable pilot-card">
          <!-- <div class='pilot-card'> -->
            <td><img src="<%= player.picture %>" alt=""></td>
            <td><p><%= player.first_name %></p></td>
            <td><p><%= player.last_name %></p></td>
            <td><p style="display: inline; padding-right: 5px" class="price"><%= player.price %></p><p style="display: inline; padding-left: 0px">M$</p></td>
            <td><p class="constructor"><%= player.is_constructor %></p></td>
          <!-- </div> -->
        </tr>
      <% end %>
    <% end %>
  </table>

  <h1>Constructors</h1>
  <table class='constructor-table'>
    <% @players.each do |player| %>
      <% if (player.is_constructor == true) %>
        <tr class="clickable constructor-card">
          <!-- <div class='pilot-card'> -->
            <td><img src="<%= player.picture %>" alt=""></td>
            <td><p><%= player.first_name %></p></td>
            <td><p><%= player.last_name %></p></td>
            <td><p style="display: inline; padding-right: 5px" class="price"><%= player.price %></p><p style="display: inline; padding-left: 0px">M$</p></td>
            <td><p class="constructor"><%= player.is_constructor %></p></td>
          <!-- </div> -->
        </tr>
      <% end %>
    <% end %>
  </table>
</div>
